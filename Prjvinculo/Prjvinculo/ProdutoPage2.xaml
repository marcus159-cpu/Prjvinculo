<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prjvinculo.ProdutoPage2"
             Title="ProdutoPage2">
    <VerticalStackLayout>
        <Label 
    Text="Descrição"
    VerticalOptions="Start" 
    HorizontalOptions="Start" />
        <Label 
    Text="{Binding Descricao2}"
    FontSize="Large"
    VerticalOptions="Start" 
    HorizontalOptions="Start" />
        <Label 
    Text="Preço"
    VerticalOptions="Start" 
    HorizontalOptions="Start" />
        <Label 
    Text="{Binding Preco2}"
    FontSize="Large"
    VerticalOptions="Start" 
    HorizontalOptions="Start" />
        <Label 
    Text="Categoria"
    VerticalOptions="Start" 
    HorizontalOptions="Start" />
        <Label 
    Text="{Binding Categoria2}"
    FontSize="Large"
    VerticalOptions="Start" 
    HorizontalOptions="Start" />
    </VerticalStackLayout>
</ContentPage>